<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F4F6"
    >

    <RelativeLayout
        android:id="@+id/layout_relative"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"


        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/shadydesign">
     <TextView
         android:id="@+id/textMorning"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         android:text="Good Morning"
         android:layout_marginLeft="13dp"
         android:textColor="#33691E"
         android:textSize="25dp"
         android:layout_marginTop="70dp"
         />

        <TextView
            android:id="@+id/textPersonName"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content"

            android:text="Nouman Tasif"
            android:layout_below="@+id/textMorning"
            android:textColor="#33691E"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            />
             <ImageView
                 android:id="@+id/imagecloud"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:src="@drawable/ic_baseline_cloud_24"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="40dp"

                 />


        <TextView
            android:id="@+id/textdegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 C"
            android:textSize="20dp"
            android:textColor="#33691E"
            android:layout_below="@+id/imagecloud"
android:layout_alignParentRight="true"

            />
        <TextView
            android:id="@+id/textcloudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cloudy"
            android:textSize="20dp"
            android:textColor="#33691E"
            android:layout_below="@+id/textdegree"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
   <TextView
       android:id="@+id/textstartjourney"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Start a new Journey"
       android:textColor="@color/black"
       android:layout_marginTop="10dp"
       android:textSize="20dp"
       android:layout_below="@id/layout_relative"
       />

    <LinearLayout
        android:id="@+id/LinearLayoutmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textstartjourney"
        android:padding="12dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="6dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            app:cardElevation="5dp"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
                android:padding="8dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walking"
                    android:textSize="25dp"
                    android:textColor="@color/black"

                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/babywhitebg"
                    android:layout_gravity="bottom|end"

                    />
            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="6dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            app:cardElevation="5dp"
            android:layout_marginLeft="7dp"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="19dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cycling"
                android:textSize="25dp"
                android:textColor="@color/black"


                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/cycling"
                android:layout_gravity="bottom|end"

                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="6dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                android:layout_marginLeft="3dp"

                app:cardCornerRadius="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="19dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving"
                    android:textColor="@color/black"
                    android:textSize="25dp"

                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/carcard"
                    android:layout_gravity="bottom|end"

                    />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="6dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="7dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="19dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Train"
                    android:textSize="25dp"
                    android:textColor="@color/black"


                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/train"
                    android:layout_gravity="bottom|end"

                    />
                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

           >
            <androidx.cardview.widget.CardView
                android:layout_width="6dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="19dp"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiking"
                    android:textSize="25dp"
                    android:textColor="@color/black"

                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hike"
                    android:layout_gravity="bottom|end"

                    />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="6dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="4dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="19dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flight"
                    android:textSize="25dp"
                    android:textColor="@color/black"


                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flight"
                    android:layout_gravity="bottom|end"

                    />

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>




    </LinearLayout>






</RelativeLayout>